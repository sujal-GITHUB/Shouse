<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('./partials/header') %>
    <% function getCountForKey(key) {%>
        <% return objectIdCounts[key] || 0;}%>
            <div class="h-auto border-2 border-yellow-400 rounded-lg">
            <div class="parent w-full h-auto justify-center flex items-start px-20 py-20 gap-10">
                <div class="w-[90%] flex flex-wrap justify-center gap-10">
                    <% if(user.cart.length === 0){%>
                    <div>
                        <div><img src="/images/empty-cart.png" alt="" width-50px></div>
                        <h1 class="flex justify-center text-white text-4xl font-semibold">Cart is Empty!</h1>
                    </div>
                    <%}%>
                    
                    <% user.cart.forEach(product => { %>
                        <% if(product.isOne === false){%>
                            <div class="w-1/5 h-1/4 p-5">
                                <div class="w-full rounded-lg border-2 border-yellow-400 overflow-hidden">
                                    <div class="w-full flex justify-center text-white items-center w-30 bg-gray-500">
                                        <% if (user && user.cart && Array.isArray(user.cart) && user.cart.length > 0 && product.image) { %>
                                            <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="Product Image">
                                        <% } else { %>
                                            <p>No image available</p>
                                        <% } %>
                                    </div>
                                    <div class="w-full flex justify-between text-white px-5 py-2 bg-[#606470]">
                                        <h3 class="text-md"><%= product.name %></h3>
                                    </div>
                                    <div class="bg-[#606470]">
                                        <div class="flex items-center pb-3 pl-5 gap-2">
                                            <a class="w-5 text-black h-5 bg-white flex rounded-full items-center justify-center  text-2xl" href='/add/<%= product._id %>'>+</a>
                                            <div class="px-2 rounded-md bg-white font-bold text-black"><%= getCountForKey(product._id) %></div>
                                            <a class="text-black w-5 h-5 bg-white flex rounded-full items-center justify-center pb-1 text-3xl" href="/delete/<%= product._id %>">-</a>
                                        </div>
                                    </div>
                                    <div class="flex font-semibold items-center justify-between px-5 text-black bg-[#d3d6db] py-1">
                                        <h4 class="text-lg">Price</h4>
                                        <h2 class="text-lg ">₹ <%= product.price %></h2>
                                    </div>
                                </div>
                            </div>
                            <% product.isOne = true;%>
                            <%}%>
                    <% }) %>
                </div>
            </div>

            <% if(user.cart.length>0){%>
            <div class="w-full h-[1px] bg-zinc-500 mb-3 "></div>
            <h1 class=" flex justify-center text-yellow-400 font-bold text-3xl">CHECKOUT</h1>
            <div class="w-full h-[1px] bg-zinc-500 mt-3 "></div>
            <div class="flex flex-col items-center justify-center">
                <div class="p-10 w-1/3 text-white border-2 border-zinc-600  text-md font-semibold bg-zinc-900 shadow-lg backdrop-filter backdrop-blur-sm border-opacity-25 rounded-xl mb-5 m-10">
                    <h3 class="text-2xl">Price Breakdown</h3>
                    <div class="px-10 text-md mt-5 ">
                        <div class="flex mt-2 justify-between">
                            <h4 class="w-1/3">Total MRP</h4>
                            <h4>₹ <%= amount %></h4>
                        </div>
                        <div class="flex mt-2 justify-between">
                            <h4 class="w-1/3">Discount on MRP</h4>
                            <h4>₹ <%= tdiscount %></h4>
                        </div>
                        <div class="flex mt-2 justify-between">
                            <h4 class="w-1/3">Platform Fee</h4>
                            <h4>₹ 20</h4>
                        </div>
                        <div class="flex mt-2 justify-between">
                            <h4 class="w-1/3">Shipping Fee</h4>
                            <h4>FREE</h4>
                        </div>
                        </div>
                        <div class="w-full h-[1px] bg-white mt-10 "></div>
                        <div class="flex mt-5 justify-between">
                            <h3 class="w-1/3 text-xl">Total Amount</h3>
                            <h3 class="font-semibold text-xl transition-transform transform duration-200 hover:scale-150 text-green-500">₹ <%= bill %></h3>
                        </div>
                        <form action=""></form>
                    </div>
                    <div class="mb-5 flex items-center justify-start">
                        <a href="/checkout" class="bg-blue-500 hover:bg-green-500 text-white text-xl p-2 px-7 rounded-lg m-2" >Pay now</a>
                        <a href="/shop" class="bg-blue-500 text-white hover:bg-red-500 text-xl p-2 px-7 rounded-lg m-2" >Go back</a>
                    </div>
            </div>
            <%}%>
        </div>
    <%- include('./partials/footer') %>
</body>
</html>